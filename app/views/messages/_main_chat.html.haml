.main-chat
  .main-chat__group-info
    .main-chat__group-info__left-box
      %h1.main-chat__group-info__left-box__title-box
        Programming
      %ul.main-chat__group-info__left-box__member-name
        Member : Sho

    .main-chat__group-info__right-box
      = link_to "Edit", "#"

  .main-chat__message
    .main-chat__message__box
      .main-chat__message__box__info
        %p.main-chat__message__box__info__talker
          Sho
        %p.main-chat__message__box__info__date
          2020/08/25(Wed)17:43:00
      .main-chat__message__box__comment
        Good Morning!
    .main-chat__message__box
      .main-chat__message__box__info
        %p.main-chat__message__box__info__talker
          Sho
        %p.main-chat__message__box__info__date
          2020/08/25(Wed)17:45:00
      .main-chat__message__box__comment
        Good Night!


  .main-chat__form
    %form.main-chat__form__new-message
      .main-chat__form__new-message__input-box
        %input{type: "text" , placeholder: "type a message" , class: "main-chat__form__new-message__input-box__text"}
        %label.main-chat__form__new-message__input-box__image
          %input{type: "file" , class: "main-chat__form__new-message__input-box__image__detail"}
          = icon('far' , 'image')
      %input{type: "submit" , value: "Send" , class: "main-chat__form__new-message__submit-btn"}



